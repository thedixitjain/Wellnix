# Wellnix Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
FLASK_DEBUG=1
FLASK_ENV=development

# Database
DATABASE_URL=sqlite:///data/wellnix.db

# Google OAuth (optional)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microservices URLs
NUTRI_AI_URL=http://localhost:5001
MUSCLE_AI_URL=http://localhost:5002
NUTRI_AI_PORT=5001
MUSCLE_AI_PORT=5002

# Groq API Key (required for Ana chatbot)
# Get yours free at https://console.groq.com
GROQ_API_KEY=

# JWT Authentication
JWT_SECRET_KEY=wellnix-jwt-dev-secret-change-in-production

# Next.js Frontend
FRONTEND_URL=http://localhost:3000

# Redis (for Celery async tasks, optional)
REDIS_URL=redis://localhost:6379/0
